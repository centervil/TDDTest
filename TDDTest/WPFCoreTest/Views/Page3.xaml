<Page x:Class="WPFCoreTest.Views.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCoreTest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <TextBlock Text="Page3" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Command="{Binding NextButton}"  Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Width="90" Height="30"/>
        <Button Command="{Binding BackButton}" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Width="90" Height="30"/>
    </Grid>
</Page>
